    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.FirstLastName %>">
  </div>


  <div class="field" style="text-align: left;width: 370px;display: inline-block;float: right;">
    <label >Apellido Materno</label>
    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.SecondLastName %>">
  </div>

</div>



    
  

  <div>


  <div class="field" style="text-align: left;width: 370px;display: inline-block;">
    <label >No. de Control</label>
    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.ControlNumber %>">
  </div>



  <div class="field" style="text-align: left;width: 370px;display: inline-block;float: right;">
    <label >Fecha de Nacimiento</label>
    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.Birthdate %>">

  </div>


  <div class="field" style="text-align: left;width: 370px;display: inline-block;">
