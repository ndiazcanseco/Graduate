    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.Phone %>">
  </div>



</div>


  

<hr></br>




  <div class="field" style="text-align: left">
    <label >Domicilio</label>
    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.Address %>">
  </div>




<div>


  <div class="field" style="text-align: left;width: 250px;display: inline-block;">
  <label >Colonia</label>
    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.Unity %>">

  </div>


  <div class="field" style="text-align: left;width: 250px;display: inline-block;">
     <label >Ciudad</label>
    <input readonly="readonly" type="text" class="form-control"  value="<%= @personal_information.City %>">
  </div>


